<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFD0000" Offset="0"/>
                <GradientStop Color="#FF6C2121" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button Content="Check" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,50" Width="100" Height="50" FontSize="26" Click="Check_Click"/>
        <ComboBox x:Name="CurrencyCB" HorizontalAlignment="Left" Margin="25,81,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding AvailableCurrencies}" SelectedIndex="0"/>
        <DatePicker x:Name="FromDateDP" HorizontalAlignment="Left" Margin="151,79,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="ToDateDP" HorizontalAlignment="Left" Margin="258,79,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
